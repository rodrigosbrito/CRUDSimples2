
@{
    ViewBag.Title = "Cadastrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar</h2>
<div ng-controller="ClientesController">
    <form role="form" name="frmRegister">
        <div class="form-group">
            <label for="txtNome">
                Nome
            </label>
            <input type="text" class="form-control" ng-model="ClienteNome" name="txtNome" />
        </div>
        <div class="form-group">
            <label for="txtEmail">
                Email
            </label>
            <input type="text" class="form-control" ng-model="ClienteEmail" name="txtEmail" />
        </div>
        <div class="form-group">
            <label for="txtDataNascimento">
                Data de Nascimento
            </label>
            <input type="text" class="form-control" ng-model="ClienteData" name="txtDataNascimento" />
        </div>
        <div class="checkbox">
            <label for="chkAtivo">
                <input type="checkbox" ng-model="ClienteAtivo" name="chkAtivo" /> Ativo
            </label>
        </div>
        <button type="button" class="btn btn-default" ng-click="AddUpdateCliente()">Cadastrar</button>
    </form>
</div>


